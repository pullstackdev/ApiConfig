@model IEnumerable<ConsumeWebApi.Models.HotelApi>
@{
    Layout = null;
}

<h2>All Hotels</h2>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>@r.City</td>
            </tr>
        }
    </tbody>
</table>